# Production Environment Variables
NODE_ENV=production
PORT=5000

# Database (Update with your production MongoDB connection string)
MONGO_ROOT_USERNAME=your_production_mongo_username
MONGO_ROOT_PASSWORD=your_production_mongo_password
MONGO_DATABASE=mealloop_prod
MONGO_URI=mongodb://your_production_mongo_username:your_production_mongo_password@your_mongo_host:27017/mealloop_prod?authSource=admin

# Security (IMPORTANT: Generate a strong JWT secret for production)
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters

# URLs (Update with your production URLs)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Cloudinary Production (Create production Cloudinary account)
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret

# Redis Production
REDIS_URL=redis://your_redis_host:6379